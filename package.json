{
  "name": "@webtechjournals/corehooks",
  "version": "0.0.0-development",
  "description": "A lightweight, tree-shakeable collection of essential React hooks for modern applications.",
  "author": {
    "name": "Rakesh Kumar",
    "email": "rakeshpersonal@gmail.com",
    "url": "https://github.com/rakeshongithub"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakeshongithub/corehooks.git"
  },
  "bugs": {
    "url": "https://github.com/rakeshongithub/corehooks/issues"
  },
  "homepage": "https://github.com/rakeshongithub/corehooks#readme",
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "custom-hooks",
    "typescript",
    "frontend",
    "webtechjournals",
    "corehooks"
  ],
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "peerDependencies": {
    "react": ">=18"
  },
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "clean": "rm -rf dist types",
    "build:js": "rollup -c",
    "build:types": "rollup -c rollup.types.config.js",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "check:commitmsg": "commitlint --from=HEAD~1",
    "release": "semantic-release",
    "semantic-release": "semantic-release",
    "release:dry": "export $(cat .env | xargs) && npx semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jsdom": "^22.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^2.8.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^5.0.0",
    "semantic-release": "24.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.6.0",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "package.json",
    "package-lock.json",
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}
